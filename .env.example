# Harker Enterprises - Environment Variables
# Copy this file to .env.local and fill in your actual values

# ===========================================
# SITE CONFIGURATION
# ===========================================
NEXT_PUBLIC_SITE_URL=https://harker-enterprises.com

# ===========================================
# EMAIL SERVICE (Choose one)
# ===========================================
# Option 1: Resend (Recommended - Simple & Reliable)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx

# Option 2: SendGrid
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxx

# Option 3: Nodemailer (SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Email Configuration
EMAIL_FROM=noreply@harker-enterprises.com
EMAIL_TO=ronaldharker@yahoo.com
EMAIL_REPLY_TO=ronaldharker@yahoo.com

# ===========================================
# SMS SERVICE (Optional - Twilio)
# ===========================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx
OWNER_PHONE_NUMBER=+13303012769

# ===========================================
# ANALYTICS (Optional)
# ===========================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# ===========================================
# SECURITY
# ===========================================
# Rate limiting (requests per minute)
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_WINDOW=60000

# Form honeypot field name (anti-spam)
HONEYPOT_FIELD=website_url

# ===========================================
# FEATURE FLAGS (Optional)
# ===========================================
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_GALLERY=true

# ===========================================
# DEVELOPMENT
# ===========================================
NODE_ENV=development
